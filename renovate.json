{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":enableVulnerabilityAlertsWithLabel('security')",
    ":disableMajorUpdates",
    ":automergePatch",
    "group:recommended"
