{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "gradle": {
    "fileMatch": [
      "(^|/)gradle/wrapper/gradle-wrapper\\.properties$",
      "(^|/)gradle/wrapper/gradle-wrapper\\.jar$"
    ]
  },
  "lockFileMaintenance": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "separateMinorPatch": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  }
}
